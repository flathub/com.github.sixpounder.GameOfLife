{
    "app-id" : "com.github.sixpounder.GameOfLife",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "game-of-life",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "G_MESSAGES_DEBUG" : "none",
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "game-of-life=debug,glib=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "game-of-life",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dbuildtype=release"
            ],
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/game-of-life/cargo"
                }
            },
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/release/game-of-life -t /app/bin/"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "tag" : "v0.1.5",
                    "commit": "a712312d189ae17fd83f28569f017d0f524abc79",
                    "url" : "https://github.com/sixpounder/game-of-life"
                },
                "cargo-sources.json"
            ]
        }
    ]
}